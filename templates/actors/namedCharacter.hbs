<form class="actor-sheet {{cssClass}}" autocomplete="off">
    <div class="sidebar">
		{{#if (eq actor.type "hero")}}
		<h1 class="archetype">
			<div data-edit="data.archetype" contenteditable>
				{{data.archetype}}
			</div>
		</h1>
		{{/if}}

		<img class="actor-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>

		<div class="stats-and-weapons">
			{{> "systems/tutorial-fs2e/templates/partials/character-stat-block.hbs"}}
			<section class="weapon-list">
				{{#each weapons as |weapon id|}}
				{{> "systems/tutorial-fs2e/templates/partials/weapon-card.hbs" weapon}}
				{{/each}}
			</section>
		</div>

		{{#if (eq actor.type "hero")}}
		<section class="wealth">
			<h2 class="stat-name">{{localize "fs2e.wealth.label"}}</h2>
			<select name="data.wealth" class="stat-value">
				{{#select data.wealth}}
				{{#each config.wealthLevels as |name type|}}
				<option value="{{type}}">{{localize name}}</option>
				{{/each}}
				{{/select}}
			</select>
		</section>
		{{/if}}
	</div>
</form>
